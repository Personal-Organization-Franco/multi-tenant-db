# Development Environment Configuration
# This file contains development-specific environment variables
# Copy this to .env and customize as needed

# Database Configuration
# PostgreSQL connection settings (used by docker-compose.yml)
POSTGRES_DB=multi_tenant_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=dev_password_123
POSTGRES_PORT=5432

# Application Database Connection
# Full database URL for FastAPI application
DATABASE_URL=postgresql+asyncpg://postgres:dev_password_123@localhost:5432/multi_tenant_db

# Security Keys (DEVELOPMENT ONLY - NOT FOR PRODUCTION)
# JWT secret for authentication tokens
JWT_SECRET_KEY=dev_jwt_secret_key_not_for_production_use_only
JWT_ALGORITHM=HS256
JWT_TOKEN_EXPIRE_MINUTES=60

# Application Environment
ENVIRONMENT=development
DEBUG=true

# Logging Configuration
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_JSON=true

# Database Connection Pool Settings (Development)
DB_POOL_SIZE=2
DB_MAX_OVERFLOW=5
DB_POOL_TIMEOUT=30

# CORS Settings (Development)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000,http://127.0.0.1:8000

# Multi-tenant Settings
DEFAULT_TENANT_ID=development
TENANT_HEADER_NAME=X-Tenant-ID
TENANT_COOKIE_NAME=tenant_id
REQUIRE_TENANT_HEADER=false

# API Documentation Settings
DOCS_URL=/docs
REDOC_URL=/redoc
OPENAPI_URL=/openapi.json

# Development Tools
# PgAdmin web interface credentials (optional)
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050

# Development Server Settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
UVICORN_RELOAD=true
UVICORN_LOG_LEVEL=info

# Testing Settings
PYTEST_DATABASE_URL=postgresql+asyncpg://postgres:dev_password_123@localhost:5433/multi_tenant_db_test
TEST_TENANT_ID=test_tenant
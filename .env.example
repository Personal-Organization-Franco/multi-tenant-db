# Database Configuration
# PostgreSQL connection settings (used by docker-compose.yml)
POSTGRES_DB=multi_tenant_db
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5432

# Application Database Connection
# Full database URL for FastAPI application (format: postgresql+asyncpg://user:pass@host:port/db)
DATABASE_URL=postgresql+asyncpg://postgres:your_secure_password_here@localhost:5432/multi_tenant_db

# Security Keys
# JWT secret for authentication tokens - MUST be changed in production
JWT_SECRET_KEY=your_super_secure_jwt_secret_key_change_this_in_production

# Application Environment
# Environment type: development, staging, production
ENVIRONMENT=development
# Enable/disable debug mode
DEBUG=true

# Development Tools (Optional)
# PgAdmin web interface credentials
PGADMIN_EMAIL=admin@localhost.com
PGADMIN_PASSWORD=admin
PGADMIN_PORT=5050